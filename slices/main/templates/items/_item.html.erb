<div class="card">
  <div class="card-content ">
    <div class="media">
      <div class="media-content">
        <h5 class="title is-5"><%= item.title %></h2>
        <h6 class="subtitle is-6">Duration: <%= "#{item.duration / 60} min" %></h6>
      </div>
    </div>
    <div class="content">
      <p>Start date: <%= item.start_date.strftime("%B %d, %Y, %A - %H:%m") %></p>
      <p>End date: <%= item.end_date.strftime("%B %d, %Y, %A - %H:%m") %></p>
    </div>
  </div>
</div>
